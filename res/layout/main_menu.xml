<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:rowCount="8"
    android:columnOrderPreserved="false"
    android:useDefaultMargins="true" android:clickable="true">

    <TextView
            android:text="Main Menu"
            android:textSize="32dip"

            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            />

    <Space android:layout_width="100dp" />

    <ImageButton
        android:id="@+id/introduction"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_main" 
        android:contentDescription="Introduce the app" android:background="@null" android:clickable="true"/>

	    <ImageButton
	        android:id="@+id/nutrition"
	        android:layout_column="2"
	        android:layout_marginTop="50dp"
	        android:layout_row="2"
	        android:src="@drawable/testapple" android:background="@null" android:clickable="true"/>

	    <ImageButton
	        android:id="@+id/exercises"
	        android:layout_column="2"
	        android:layout_row="3"
	        android:src="@drawable/icon_main" android:background="@null"/>

	    <ImageButton
	        android:id="@+id/plan"
	        android:layout_column="1"
	        android:layout_row="3"
	        android:src="@drawable/dumbell" android:background="@null"/>
	    
</GridLayout>